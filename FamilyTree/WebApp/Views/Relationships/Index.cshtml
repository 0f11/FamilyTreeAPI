@model IEnumerable<Domain.Relationships>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PersonOne)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonTwo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleOne)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleTwo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Family)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RelationshipTypes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChangedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChangedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PersonOne.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PersonTwo.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoleOne.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoleTwo.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Family.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RelationshipTypes.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChangedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChangedAt)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
